{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "jsx": "react-jsx",
    "types": ["vite/client", "jest", "node"],
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/__tests__/**/*.ts",
    "src/__tests__/**/*.tsx",
    "src/__tests__/**/*.js",
    "src/__tests__/**/*.jsx",
    "src/__tests__/*.ts",
    "src/__tests__/*.tsx",
    "__tests__",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "__tests__/**/*.js",
    "__tests__/**/*.jsx"
  ],
  "exclude": ["node_modules", "dist", ".vite", "dataconnect-generated"]
}
